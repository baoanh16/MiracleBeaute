section.canhcam-form-1
	.container
		.row.miracle-title.text-center
			.col
				h2 Liên hệ
	.container
		.row.info
			.col-md-5.col-lg-4
				article.inf.h-100
					figure.text-center(bg-img='./img/bg/bg.png')
						img.w-50(src="./img/logo.png", alt="alt")
						figcaption
					p.text-center.text-md-left 
						span.bold Công ty: 
						span 122/19 Đặng Văn Ngữ, P.14, Q. Phú Nhuận, Tp.HCM. 
					p.text-center.text-md-left 
						span.bold Chi nhánh: 
						span 3 Nguyễn Như Đổ, Q. Đống Đa, Hà Nội.
					p.text-center.text-md-left 
						span.bold Điện thoại: 
						span 0932 14 2224 - 02866 828 844

					p.text-center.text-md-left 
						span.bold Email: 
						span contact@miraclebeaute.com

			.col-md-7.col-lg-8
				h3.h3.mt-5.mt-md-0.mb-4 Quý khách vui lòng điền thông tin vào mẫu bên dưới và gửi những góp ý, thắc mắc cho Miracle Beaute, chúng tôi sẽ phản hồi email của Quý khách trong thời gian sớm nhất.
				form.validator
					.row
						.form-group.col-md-6
							label(for='name') Họ tên
								span.text-main (*)
							input#name.form-control(type='text', data-error="Vui lòng nhập thông tin", required)
							.help-block.with-errors
						.form-group.col-md-6
							label(for='Email') Email
							input#Email.form-control(type='text',  data-error="Vui lòng nhập thông tin", pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", required)
							.help-block.with-errors
					.row
						.form-group.col-md-6
							label(for='Phone') Số điện thoại
							input#Phone.form-control(type='text',  data-error="Vui lòng nhập thông tin", pattern="^[_A-z0-9]{1,}$", required)
							.help-block.with-errors
						.form-group.col-md-6
							label(for='Address') Địa chỉ
							input#Address.form-control(type='text', )
					.row
						.form-group.col
							label(for='sms') Tin nhắn
							textarea#sms.form-control(name="sms", cols="30", rows="5")

					.row
						.col
							button.btn.btn-primary.text-uppercase(type="submit") GỬI
