	.container.miracle-title
		.row
			.col.text-center
				h2 Qui trình tư vấn da
	article.procedure
		.container
			.row
				.col-lg-4.cam-ket
					.text
						h3 CAM KẾT
						p
							span.mdi.mdi-check-circle-outline
							span Chịu trách nhiệm hoàn toàn trên làn da trong thời gian sử dụng sản phẩm tại Miracle Beaute
						p
							span.mdi.mdi-check-circle-outline
							span Theo dõi da định kỳ mỗi tháng
						p
							span.mdi.mdi-check-circle-outline
							span Hỗ trợ và giải đáp thắc mắc
						p
							span.mdi.mdi-check-circle-outline
							span Sản phẩm nhập khẩu chính hãng từ Pháp
				.col-lg-8.procedure-step
					.text
						h3 01
						h4 Lựa chọn hình thức tư vấn
						.row
							.col-12.col-sm-6.mb-4.mb-sm-0
								p
									span.lead Tư vấn trực tuyến: 
									span Các chuyên viên tư vấn sẽ phân tích cho quý khách tình trạng da hiện tại dựa trên thông tin đã cung cấp.
								a.btn.btn-primary(data-fancybox='send-info', data-src='#send-info', href='javascript:;') 
									span.mdi.mdi-note-text
									span Gửi thông tin về làn da
								#send-info.home-popup.modal-form(style='display: none')
									h4 Gửi thông tin về làn da
									form
										.form-group
											label.label(for='name') Tên
											input.form-control(name='name' type='text' placeholder='Tên')
										.form-group
											label.label(for='phone') Số điện thoại
											input.form-control(name='phone' type='text' placeholder='Số điện thoại')
										.form-group
											label.label(for='email') Email
											input.form-control(name='email' type='email' placeholder='Email')
										.form-group
											label.label(for='content') Nội dung
											textarea.form-control.datepicker(name="content" placeholder='Nội dung' rows='3')
										.form-group
											button.btn.btn-primary(type="submit") Đăng ký
									
							.col-12.col-sm-6
								p
									span.lead Tư vấn trực tiếp: 
									span Hẹn lịch và đến trực tiếp văn phòng Hà Nội và Sài Gòn, các chuyên viên tư vấn sẽ xem và chẩn đoán tình trạng da.
								a.btn.btn-primary(data-fancybox='book-meeting', data-src='#book-meeting', href='javascript:;') 
									span.mdi.mdi-note-text
									span Đặt lịch hẹn ngay
								#book-meeting.home-popup.modal-form(style='display: none')
									h4 Đặt lịch hẹn ngay
									form
										.form-group
											label.label(for='name') Tên
											input.form-control(name='name' type='text' placeholder='Tên')
										.form-group
											label.label(for='phone') Số điện thoại
											input.form-control(name='phone' type='text' placeholder='Số điện thoại')
										.form-group
											label.label(for='email') Email
											input.form-control(name='email' type='email' placeholder='Email')
										.form-group
											label.label(for='date') Ngày hẹn
											input.form-control.datepicker(name='date' type='date' value='2018-07-26')
										.form-group
											button.btn.btn-primary(type="submit") Đăng ký

